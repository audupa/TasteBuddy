<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFF1"
    android:orientation="vertical" >
	
	    <RelativeLayout
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:id="@+id/relativeLayout1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_margin="20dp"
	        android:background="@drawable/rounded_edit_box"
	        android:orientation="horizontal"
	        android:paddingTop="20dp" 
	        android:paddingLeft="0dp"
	        android:paddingRight="0dp"
	        android:paddingBottom="4dp">
			<LinearLayout
	            android:id="@+id/taggingOptions"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:orientation="vertical" >
			        <AutoCompleteTextView
			            android:id="@+id/autocomplete_dishes_list"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_alignParentTop="true"
			            android:background="@null"
			            android:ems="10"
			            android:paddingLeft="10dp"
			            android:hint="@string/dish_hint"/><!-- android:text="@null  " -->
			            
			        <TextView
			            android:id="@+id/placeSelected"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#0000EE"
			            android:paddingLeft="10dp"/>
			        <TextView
			            android:id="@+id/emotion_value"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#0000EE"
			            android:paddingLeft="10dp"/>
			        <TextView
			            android:id="@+id/health_value"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#0000EE"
			            android:paddingLeft="10dp"/>
			        
		      </LinearLayout>      
			
	        <ImageView
	            android:id="@+id/camera_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="false"
	            android:layout_marginRight="10dp"
	            android:src="@android:drawable/ic_menu_camera" />
	        <ImageView
	            android:id="@+id/dish_pic"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="false" 
	            android:paddingRight="10dp"/>
	        
	        <LinearLayout
	            android:id="@+id/taggingOptions"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="120dp"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:orientation="horizontal" >
	
	            <ImageView
	                android:id="@+id/location"
	                android:layout_width="34dp"
	                android:layout_height="41dp"
	                android:src="@drawable/location_icon" />
	
	            <ImageView
	                android:id="@+id/reviewButton"
	                android:layout_width="34dp"
	                android:layout_height="41dp"
	                android:layout_marginLeft="30dp"
	                android:src="@drawable/review_icon" />
	
	            <ImageView
	                android:id="@+id/taste"
	                android:layout_width="34dp"
	                android:layout_height="41dp"
	                android:layout_marginLeft="30dp"
	                android:layout_weight="0.01"
	                android:src="@drawable/taste_icon" />
	            
	            <ImageView
	                android:id="@+id/health"
	                android:layout_width="34dp"
	                android:layout_height="41dp"
	                android:layout_marginLeft="30dp"
	                
	                android:src="@drawable/gym_icon" />
	
	
	        </LinearLayout>
	
	    </RelativeLayout>
	
		<LinearLayout
	          android:id="@+id/emotion_meter"
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:layout_below="@+id/relativeLayout1"
	          android:layout_centerHorizontal="true"
	          android:background="@drawable/rounded_edit_box"
	          android:visibility="invisible"
	          android:layout_marginTop="0dp"
	          android:layout_marginLeft="20dp"
	          android:layout_marginBottom="20dp"
	          android:layout_marginRight="20dp"
	          android:padding="10dp"
	          android:paddingRight="20dp"
	          android:orientation="horizontal" >
	
	          <ImageView
	              android:id="@+id/emo1"
	              android:layout_width="34dp"
	              android:layout_height="41dp"
	              android:src="@drawable/emo1" />
	
	          <ImageView
	              android:id="@+id/emo2"
	              android:layout_width="34dp"
	              android:layout_height="41dp"
	              android:layout_marginLeft="30dp"
	              android:src="@drawable/emo2" />
	
	          <ImageView
	              android:id="@+id/emo3"
	              android:layout_width="34dp"
	              android:layout_height="41dp"
	              android:layout_marginLeft="30dp"
	              android:layout_weight="0.01"
	              android:src="@drawable/emo3" />
	          
	          <ImageView
	              android:id="@+id/emo4"
	              android:layout_width="34dp"
	              android:layout_height="41dp"
	              android:layout_marginLeft="30dp"
	              android:src="@drawable/emo4" />
	
	      </LinearLayout>
		<LinearLayout
	          android:id="@+id/health_meter"
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:layout_below="@+id/relativeLayout1"
	          android:layout_centerHorizontal="true"
	          android:background="@drawable/rounded_edit_box"
	          android:visibility="invisible"
	          android:layout_marginTop="0dp"
	          android:layout_marginLeft="20dp"
	          android:layout_marginBottom="20dp"
	          android:layout_marginRight="20dp"
	          android:padding="10dp"
	          android:paddingRight="20dp"
	          android:orientation="horizontal" >
	
	          <ImageView
	              android:id="@+id/health1"
	              android:layout_width="34dp"
	              android:layout_height="41dp"
	              android:src="@drawable/health3" />
	
	          <ImageView
	              android:id="@+id/health2"
	              android:layout_width="34dp"
	              android:layout_height="41dp"
	              android:layout_marginLeft="30dp"
	              android:src="@drawable/health2" />
	
	          <ImageView
	              android:id="@+id/health3"
	              android:layout_width="34dp"
	              android:layout_height="41dp"
	              android:layout_marginLeft="30dp"
	              android:layout_weight="0.01"
	              android:src="@drawable/health1" />
	          
	          <ImageView
	              android:id="@+id/health4"
	              android:layout_width="34dp"
	              android:layout_height="41dp"
	              android:layout_marginLeft="30dp"
	              android:src="@drawable/health4" />
	
	
	      </LinearLayout>      
	      
	    
	 <ImageButton
	     android:id="@+id/shareButton"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_below="@+id/emotion_meter"
	     android:layout_centerHorizontal="true"
	     android:background="@null"
	     android:clickable="true"
	     android:src="@drawable/share" />
	
</RelativeLayout> 


